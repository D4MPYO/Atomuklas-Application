<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sample_doors">

    <!-- Top Row: Score Label + Star Score -->
    <!-- Top Row: Score Label + Star, neatly aligned to END -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="54dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_brown"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <FrameLayout
            android:id="@+id/starScoreContainer"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/star_shape" />

            <TextView
                android:id="@+id/CorrectAnswerValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/dark_brown"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- Bottom Row: Key Info, also neatly aligned to END -->
    <LinearLayout
        android:id="@+id/keyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/topRow"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/keyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key collected"
            android:textSize="18sp"
            android:textColor="@color/dark_brown"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/keyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/keyIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/key_icon"
            android:contentDescription="Key Icon" />
    </LinearLayout>


    <!-- Character Image -->
    <ImageView
        android:id="@+id/centerBottomImage"
        android:layout_width="345dp"
        android:layout_height="370dp"
        android:layout_marginStart="50dp"
        android:contentDescription="Icon"
        android:scaleType="fitCenter"
        android:src="@drawable/glass_teacher"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyContainer"
        app:layout_constraintVertical_bias="0.703"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Back to Home Button -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/backHome"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_button"
            android:text="BACK TO HOME"
            android:textColor="@color/orange" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
