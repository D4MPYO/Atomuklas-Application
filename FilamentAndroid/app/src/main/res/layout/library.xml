<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_home_bg">

    <!-- Static Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/arrow_back_light"
            android:src="@drawable/back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/examCard1"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white"
                    android:padding="10dp">

                    <!-- Title Text (Centered) -->
                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="LEARNING CONTENT"
                        android:textColor="@color/dark_brown"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Button (Centered Below Text) -->
                    <Button
                        android:id="@+id/modules_btn"
                        android:layout_width="157dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/titleText2"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="VIEW"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/atomicTriviaCard"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white"
                    android:padding="10dp">

                    <!-- Title Text (Centered) -->
                    <TextView
                        android:id="@+id/titleText21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="ATOMIC TRIVIA"
                        android:textAlignment="center"
                        android:textColor="@color/dark_brown"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Button (Centered Below Text) -->
                    <Button
                        android:id="@+id/atomicTrivia_btn"
                        android:layout_width="157dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/titleText21"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="VIEW"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/atomicQuestCard"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white"
                    android:padding="10dp">

                    <!-- Title Text (Centered) -->
                    <TextView
                        android:id="@+id/titleText22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="ATOMANIA"
                        android:textAlignment="center"
                        android:textColor="@color/dark_brown"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Button (Centered Below Text) -->
                    <Button
                        android:id="@+id/atomicQuest_btn"
                        android:layout_width="157dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/titleText22"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="LAUNCH GAME"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewModels"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white"
                    android:padding="10dp">

                    <!-- Title Text (Centered) -->
                    <TextView
                        android:id="@+id/viewModelsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="ATOMIC MODEL 3D"
                        android:textColor="@color/dark_brown"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Button (Centered Below Text) -->
                    <Button
                        android:id="@+id/viewModels_btn"
                        android:layout_width="157dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/viewModelsTitle"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="LAUNCH MODEL"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Quizzes"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white"
                    android:padding="10dp">

                    <!-- Title Text (Centered) -->
                    <TextView
                        android:id="@+id/QuizzesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="QUIZZES"
                        android:textColor="@color/dark_brown"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Button (Centered Below Text) -->
                    <Button
                        android:id="@+id/quizzes_btn"
                        android:layout_width="157dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/QuizzesTitle"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="TAKE QUIZ"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Worksheet"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="74dp"
                app:layout_constraintBottom_toTopOf="@+id/bottomNavbar"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white"
                    android:padding="10dp">

                    <!-- Title Text (Centered) -->
                    <TextView
                        android:id="@+id/WorksheetTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="LEARNING WORKSHEET"
                        android:textColor="@color/dark_brown"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Button (Centered Below Text) -->
                    <Button
                        android:id="@+id/worksheet_btn"
                        android:layout_width="157dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/WorksheetTitle"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="VIEW WORKSHEET"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navbar -->
    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_bottom_nav"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navHome"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_nav_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Home"
                android:textColor="@color/navTextColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navLibrary"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_nav_library" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Library"
                android:textColor="@color/navTextColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navQuiz"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_nav_quiz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Quiz"
                android:textColor="@color/navTextColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navAccomplishment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_nav_accomplishment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Accomplishment"
                android:textColor="@color/navTextColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navProfileAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/avatar_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Profile"
                android:textColor="@color/navTextColor"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
