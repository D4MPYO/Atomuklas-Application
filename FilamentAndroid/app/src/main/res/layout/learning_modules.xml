<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_models_bg"
    tools:context=".MainActivity">

    <!-- Fixed Back Button (Not inside ScrollView) -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/arrow_back_light"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Single Direct Child -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTENTS"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:shadowColor="#8B0000"
                android:shadowRadius="6"
                android:shadowDx="2"
                android:shadowDy="2"/>


            <ImageView
                android:id="@+id/vrImage"
                android:layout_width="168dp"
                android:layout_height="154dp"
                android:contentDescription="VR Image"
                android:src="@drawable/content_img_header"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Ensure buttonContainer is inside the parent LinearLayout -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Models as CardView Items -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/DaltonsModel"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/DaltonsModelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="INTRODUCTION"
                            android:textColor="@color/dark_brown"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/PLumPuddingModel"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/PLumPuddingModelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="BASICS"
                            android:textColor="@color/dark_brown"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/GoldFoilExperimentModel"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/GoldFoilExperimentModelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="DALTON'S MODEL"
                            android:textColor="@color/dark_brown"
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/PlanetaryModel"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/PlanetaryModelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="THOMSON'S MODEL"
                            android:textColor="@color/dark_brown"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rutherford"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/rutherfordTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="RUTHERFORD'S MODEL"
                            android:textColor="@color/dark_brown"
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Bohr"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/BohrTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="BOHR'S MODEL"
                            android:textColor="@color/dark_brown"
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
