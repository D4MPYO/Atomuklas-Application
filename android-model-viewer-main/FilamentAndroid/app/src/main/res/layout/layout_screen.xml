<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    android:padding="16dp">

    <!-- Title on top -->
    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/ralstedaextrabold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:shadowColor="#FFFF00"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:text="Title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/TitleColor"
        android:textSize="@dimen/welcome_text_size"
        android:textStyle="bold" />

    <!-- Description behind the title -->
    <TextView
        android:id="@+id/intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@id/intro_title"
        android:translationZ="-1dp"
        android:fontFamily="@font/bricksans_bold"
        android:textColor="@color/TextIntros"
        android:textSize="20sp"
        android:lineSpacingExtra="8dp"
        android:text="Description goes here."
        android:textAlignment="center"
        android:gravity="center" />

    <!-- Image in the middle -->
    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/intro_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bricksans_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:lineSpacingExtra="8dp"
        android:text="Description goes here."
        android:textAlignment="center"
        android:gravity="center" />

</RelativeLayout>
