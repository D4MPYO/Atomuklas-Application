<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guess_bg">

    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button at Start -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:src="@drawable/colored_back_arrow" />

        <!-- Spacer to push the next image to the end -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Image at the End -->
        <ImageView
            android:id="@+id/endImage"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:src="@drawable/atomu_guess_logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/Done_Exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        android:text="CONGRATULATIONS"
        android:textColor="@color/dark_brown"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper"
        app:layout_constraintBottom_toTopOf="@id/cardQuestion"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuestion"
        android:layout_width="334dp"
        android:layout_height="196dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Done_Exam"
        app:layout_constraintBottom_toTopOf="@id/Text_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/atomu_guess_board"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="YOUR SCORE"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CorrectAnswerValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="0/15"
                android:textColor="@color/yellow"
                android:textSize="60sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!-- Description Text -->
    <TextView
        android:id="@+id/Text_text"
        android:layout_width="313dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="Awesome job! Keep the momentum goingâ€”dive into the next game!"
        android:textColor="#A34713"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/characterImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardQuestion" />

    <!-- Character Illustration -->
    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="306dp"
        android:layout_height="251dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Character Illustration"
        android:src="@drawable/student_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Text_text"
        app:layout_constraintBottom_toTopOf="@id/backHomeButton" />


    <!-- Start Button -->
    <Button
        android:id="@+id/backHomeButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:text="BACK TO HOME"
        android:textColor="@color/yellow"
        android:background="@drawable/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
