<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_settings">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/arrow_back_light"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scroll View -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Intro Image -->
            <ImageView
                android:id="@+id/intro_img"
                android:layout_width="190dp"
                android:layout_height="171dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/for_module_4" />

            <!-- Title -->
            <TextView
                android:id="@+id/aboutUsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intro_img"
                android:layout_marginTop="16dp"
                android:paddingStart="24dp"
                android:text="CONTENT"
                android:textColor="@color/dark_brown"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/aboutUsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUsTitle"
                android:layout_marginTop="8dp"
                android:paddingStart="50dp"
                android:paddingEnd="24dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="Thomson Atomic Model \nThomson Discovery \nPlum Pudding Model"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <!-- Card-like Section -->
            <LinearLayout
                android:id="@+id/contentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUsDescription"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_white_bg"
                android:elevation="4dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/headingElements"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:text="Thomson Atomic Model"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/democritus"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/thomson" />

                <TextView
                    android:id="@+id/contentBranchesChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="Joseph John Thomson, commonly known as J. J. Thomson, was a prominent British physicist whose work fundamentally altered the understanding of atomic structure. Born in 1856, Thomson's most significant scientific achievement was the discovery of the electron in 1897, which he identified through experiments with cathode rays. This groundbreaking finding provided vital evidence that atoms are not indivisible, as previously believed, but consist of smaller particles."
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingInorganicChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="DISCOVERY"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/InorganicChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="J.J. Thomson discovered the electron in 1897. He experimented with a cathode-ray tube that identified the electron as a negatively charged subatomic particle, as well as proving that atoms are divisible. Thomson proposed the plum pudding model of the atom based on his research, which depicted negative electrons distributed throughout soft globules of positively charged material."
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingAnalyticalChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="PLUM PUDDING MODEL"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/PhysicalChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/plummMOdel"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingBiochemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="THOMSONâ€™S POSTULATES"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Biochemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/THOMSONPOSTULATES"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingWhyChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="SIGNIFICANCE"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentWhyChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/SIGNIFICANCEJJ"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingLastPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="LIMITATION"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentLastPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/LIMITATIONJJ"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
