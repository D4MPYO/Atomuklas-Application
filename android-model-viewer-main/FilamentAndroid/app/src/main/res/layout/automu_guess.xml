<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guess_bg">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back"
        android:src="@drawable/colored_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Banner -->
    <ImageView
        android:id="@+id/titleBanner"
        android:layout_width="316dp"
        android:layout_height="156dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Welcome Banner"
        android:src="@drawable/atomu_guess_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Your atomic knowledge is the keyâ€”guess it right! An arrow will point to a specific item that you need to identify. You'll have 10 minutes to answer all questions. The faster you respond, the higher your score!"
        android:textColor="#A34713"
        android:textSize="16sp"
        android:gravity="center"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/titleBanner"
        app:layout_constraintBottom_toTopOf="@id/characterImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Character Illustration -->
    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="326dp"
        android:layout_height="271dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Character Illustration"
        android:src="@drawable/student_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintBottom_toTopOf="@id/startButton" />


    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:text="START"
        android:textColor="@color/yellow"
        android:background="@drawable/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
