            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/BoxPop"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/popupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Clear History"
                    android:textColor="@color/dark_brown"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Description -->
                <TextView
                    android:id="@+id/popupTextClearHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Reset your progress with a single tap!\nThis option allows you to remove past answers and learning data, giving you a fresh start whenever needed."
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Confirm Button -->
                    <Button
                        android:id="@+id/confirmPopupClearHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/primary"
                        android:padding="10dp"
                        android:text="Confirm"
                        android:textColor="@color/white" />

                    <!-- Close Button -->
                    <Button
                        android:id="@+id/closePopupClearHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/PopUpBox"
                        android:padding="10dp"
                        android:text="Close"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

