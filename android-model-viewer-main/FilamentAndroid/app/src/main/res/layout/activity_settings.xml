<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_settings">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/arrow_back_light"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scroll View -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Intro Image -->
            <ImageView
                android:id="@+id/intro_img"
                android:layout_width="190dp"
                android:layout_height="171dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/new_welcome_logo" />

            <!-- Accordion Header for Data & Privacy -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/accordionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/intro_img"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvDataPrivacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Data &amp; Privacy"
                    android:textColor="@color/dark_brown"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivIndicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>

            <!-- Expandable Content for Data & Privacy -->
            <LinearLayout
                android:id="@+id/expandableContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/accordionHeader"
                android:visibility="gone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- Items for Data & Privacy -->
                <LinearLayout
                    android:id="@+id/cardClearHistory"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_history" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Clear Learning History"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardDeleteAccount"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_delete" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Delete Account Option"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardDataPolicy"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_data_privacy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Data Privacy Policy"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Accordion Header for Support & Feedback -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/accordionHeaderSupportFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/expandableContent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvSupportFeedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Support &amp; Feedback"
                    android:textColor="@color/dark_brown"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivIndicatorSupportFeedback"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>

            <!-- Expandable Content for Support & Feedback (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/expandableContentSupportFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/accordionHeaderSupportFeedback"
                android:visibility="gone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- Items for Support & Feedback -->
                <LinearLayout
                    android:id="@+id/cardContactSupport"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_contact_support" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Contact Support"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardReportIssue"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_report_issue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Report an Issue"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSuggestFeature"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_suggest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Suggest a Feature"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- About Us Title -->
            <TextView
                android:id="@+id/aboutUsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expandableContentSupportFeedback"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:text="ABOUT US"
                android:textColor="@color/dark_brown"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- About Us Description -->
            <TextView
                android:id="@+id/aboutUsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUsTitle"
                android:layout_marginTop="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="@string/about_atomuklas"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnReferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View References"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/aboutUsDescription"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true" />



            <Button
                android:id="@+id/btn_home"
                android:layout_width="141dp"
                android:layout_height="40dp"
                android:layout_below="@id/btnReferences"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_next"
                android:text="BACK TO HOME"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />



        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/popupClearHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
