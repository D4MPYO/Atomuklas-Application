<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sample_doors">

    <!-- Main vertical content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Doors layout -->
        <LinearLayout
            android:id="@+id/doors_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="40dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/door1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/door_sample_1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Pink Door"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="80dp"/>

            <ImageView
                android:id="@+id/door2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/door_sample_2"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Green Door"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="80dp"/>

            <ImageView
                android:id="@+id/door3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/door_sample_3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Red Door"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="80dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Back button (floating at top-left corner) -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="start|top"
        android:contentDescription="Back"
        android:src="@drawable/back_arrow"
        android:clickable="true"
        android:focusable="true" />

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/questionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#CCFFFFFF">

        <androidx.cardview.widget.CardView
            android:id="@+id/questionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            android:padding="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/question_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/choices_layout"
                    app:layout_constraintWidth_percent="0.5">

                    <!-- Question Text -->
                    <TextView
                        android:id="@+id/question_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is the capital city of the Philippines?"
                        android:textSize="16sp"
                        android:textColor="@color/dark_brown"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="5"
                        android:ellipsize="end" />

                    <!-- Optional Image -->
                    <ImageView
                        android:id="@+id/question_image"
                        android:layout_width="200dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                </LinearLayout>




                <!-- Choices Container -->
                <LinearLayout
                    android:id="@+id/choices_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/question_container"
                    app:layout_constraintWidth_percent="0.5">

                    <Button
                        android:id="@+id/choice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choice 1"
                        android:textSize="12sp"
                        android:background="@drawable/button_quiz_choice"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/choice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choice 2"
                        android:textSize="12sp"
                        android:background="@drawable/button_quiz_choice"

                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/choice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choice 3"
                        android:textSize="12sp"
                        android:background="@drawable/button_quiz_choice"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/choice4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choice 4"
                        android:textSize="12sp"
                        android:background="@drawable/button_quiz_choice"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:elevation="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Question Counter -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/icon_question"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_question"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/question_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/10"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Timer -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_timer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_timer"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/global_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>
