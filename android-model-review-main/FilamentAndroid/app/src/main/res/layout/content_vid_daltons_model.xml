<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_seting">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Back Button (Optional) -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back"
            android:layout_gravity="start" />

        <!-- Video Title -->
        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="John Dalton's Atomic Model"
            android:textSize="25sp"
            android:fontFamily="@font/anton_regular"
            android:textColor="@color/dark_brown"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <!-- YouTube Player -->
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Intro Image -->
            <ImageView
                android:id="@+id/intro_img"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/for_module_3" />

            <!-- Title -->
            <TextView
                android:id="@+id/aboutUsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intro_img"
                android:layout_marginTop="16dp"
                android:paddingStart="24dp"
                android:text="CONTENT"
                android:textColor="@color/dark_brown"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/aboutUsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUsTitle"
                android:layout_marginTop="8dp"
                android:paddingStart="50dp"
                android:paddingEnd="24dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="Key Principles of Models \nDalton’s Atomic Model \nDalton's Atomic Theory"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <!-- Card-like Section -->
            <LinearLayout
                android:id="@+id/contentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUsDescription"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_white_bg"
                android:elevation="4dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/headingElements"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:text="The Atomic Mode"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="Atomic model, in physics, is a model used to describe the structure and makeup of an atom. Atomic models have gone through many changes over time, evolving as necessary to fit experimental data."
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingBranchesChemistry2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Early Atomic Models"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/democritus"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/democritus" />

                <TextView
                    android:id="@+id/contentBranchesChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/democritus"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingInorganicChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:text="Dalton’s Atomic Model"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/dalton"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/dalton_portrait" />

                <TextView
                    android:id="@+id/InorganicChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="John Dalton was a prominent English chemist and physicist, best known for his groundbreaking work in atomic theory. Born on September 6, 1766, in Eaglesfield, Cumberland, he was raised in a Quaker family that emphasized education and natural philosophy. His most significant scientific contributions emerged from his investigations into gases, where he formulated the law of partial pressures and introduced the concept of atomic weights."
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingAnalyticalChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="SOLID SPHERE MODEL"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/PhysicalChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/SOLIDSPHEREMODEL"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingBiochemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="POSTULATES OF DALTON’S ATOMIC THEORY"
                    android:textColor="@color/dark_brown"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Biochemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/AtomicTheory"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingWhyChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="SIGNIFICANCE"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentWhyChemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/SIGNIFICANCE"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingLastPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="35dp"
                    android:text="LIMITATION"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentLastPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:layout_marginStart="35dp"
                    android:gravity="start"
                    android:text="@string/LIMITATION"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/headingSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="CONCLUSION"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="start"
                    android:text="@string/CONCLUSION"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />



            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
